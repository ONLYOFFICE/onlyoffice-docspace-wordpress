{
    "require-dev": {
        "wp-cli/wp-cli-bundle": "*",
        "squizlabs/php_codesniffer": "^3.7.2",
        "wp-coding-standards/wpcs": "^3.0.1",
        "captainhook/plugin-composer": "^5.3",
        "ramsey/conventional-commits": "^1.6"
    },
    "scripts": {
        "phpcs": "phpcs --standard=Wordpress --extensions=php --runtime-set minimum_wp_version 6.2 --ignore=*/assets-onlyoffice-docspace/*,*/onlyoffice-docspace-wordpress-block/*,*/vendor/*,*/node_modules/* ./",
        "translations": [
            "wp i18n make-mo languages",
            "wp i18n make-json languages --no-purge"
        ],
        "make-pot": "wp i18n make-pot . languages/onlyoffice-docspace.pot --exclude=\"vendor,node_modules,onlyoffice-docspace-wordpress-block/src\" --include=\"*.php,*.js\"",
        "update-po": "wp i18n update-po languages/onlyoffice-docspace.pot languages"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "captainhook/plugin-composer": true
        }
    }
}
